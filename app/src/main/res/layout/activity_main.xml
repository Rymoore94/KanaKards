<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="370dp"
            android:layout_height="0dp"
            android:text="T"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/kanaBox" android:textAllCaps="false"
            android:textSize="180sp" app:layout_constraintTop_toBottomOf="@+id/testButt"
            android:layout_marginBottom="117dp"/>
    <Button
            android:text="Correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightButt"
            android:background="@android:color/holo_green_dark" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="53dp" android:layout_marginBottom="32dp"/>
    <Button
            android:text="Incorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrongButt"
            android:background="@android:color/holo_red_dark" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="59dp" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testButt" android:layout_marginTop="16dp"
            android:layout_marginBottom="53dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/kanaBox" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>