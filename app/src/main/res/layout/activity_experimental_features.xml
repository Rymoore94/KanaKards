<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExperimentalFeatures">

    <Button
            android:id="@+id/toSpeech"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="215dp"
            android:text="Blah"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toDraw"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/toDraw"
            android:layout_width="0dp"
            android:layout_height="178dp"
            android:layout_marginEnd="24dp"
            android:text="Scribble"
            app:layout_constraintBaseline_toBaselineOf="@+id/toSpeech"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toSpeech" />
</android.support.constraint.ConstraintLayout>